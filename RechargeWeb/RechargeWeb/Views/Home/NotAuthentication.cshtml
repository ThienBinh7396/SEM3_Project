<body cz-shortcut-listen="true">
    <div id="notfound">
        <div class="notfound">
            <div class="notfound-404">
                <h3>Oops! You don't have permission</h3>
                <h1><span>4</span><span>0</span><span>4</span></h1>
            </div>
            <h2>we are sorry, but you must login to continue request</h2>
            <a href="@Url.Action("Index", "Home")" style="width: 180px; margin: auto" id="link">Redirect in <span id="time">5 ...</span></a>
        </div>
    </div>
    <script type="text/javascript">
        let c = 5;
        setInterval(function (e) {
            document.getElementById("time").innerText = c-- + " ...";
            if (c == 0) {
                document.getElementById("link").click();
            }
        }, 800)

    </script>

